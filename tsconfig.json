{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs", 
    "lib": [
      "es6",
      "dom",
      "dom.Iterable",
    ],
    "allowJs": true ,
    "outDir": "./dist" ,
    "rootDir": "./src" ,
    "removeComments": true ,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true ,
    "resolveJsonModule": true,
    "experimentalDecorators": true ,
    "emitDecoratorMetadata": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*" : ["./src/controllers/*"],
      "@models/*" : ["./src/models/*"],
      "@config/*" : ["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
